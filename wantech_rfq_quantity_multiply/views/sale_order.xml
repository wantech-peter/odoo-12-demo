<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="purchase_order_quantity_multiply" model="ir.ui.view">
            <field name="name">purchase.order.multiply</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_ref']" position="after">
                        <field name="select_multiply" nolabel="1" style="margin-top:20px;"/>
                        <button name="multiply_quantity" string="Multiply" type="object" style="margin-top:14px;border-radius:10px;" class="btn-primary"/>
                </xpath>
            </field>
        </record>
   </data>
</odoo>
