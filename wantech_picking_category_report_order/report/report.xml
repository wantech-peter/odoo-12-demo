<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <report
            id="action_car_number_list_favourite"
            model="report.test.stock.forecast.car"
            string="Picking by Car"
            report_type="qweb-pdf"
            name="wantech_picking_category_report_order.favourite_pdf"
            file="wantech_picking_category_report_order.favourite_pdf"
        />
    <template id="favourite_pdf">
        <t t-call="web.html_container">
            <t t-call="product_category_list_pdf.internal_layout">
                    <div class="page" style="font-size:15px;">
                        <h2 align="center">Product Category List</h2>
                    <div class="row mb32">
                        <div class="col-4">
                            <strong>Date:</strong>
                            <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d')"/>
                        </div>
                    </div>
                        <table class="table table-bordered">
                            <tbody class="sale_tbody">
                                <thead>
                                <tr>
                                    <t t-set="exist" t-value="[]"/>
                                    <th class="text-center"></th>
                                    <t t-foreach="data" t-as="product">
                                            <t t-if="product['productname'] not in exist">
                                                <th class="text-center" style="color:#000;"><span t-esc="product['productname']"/></th>
                                                <t t-set="exist" t-value="exist + [product['productname']]"/>
                                            </t>
                                    </t>
                                </tr>
                                </thead>
                                <t t-foreach="products_grouped" t-as="product">
                                    <tr>
                                        <td class="text-center"><span t-esc="products_grouped[product]['car_number']"/></td>
                                        <t t-foreach="exist" t-as="exist_product">
                                            <t t-if="exist_product == products_grouped[product]['productname']">
                                                <td class="text-center" style="color:#000;"><span t-esc="products_grouped[product]['quantity']"/></td>
                                            </t>
                                            <t t-if="exist_product != products_grouped[product]['productname']">
                                                <td class="text-center" style="color:#000;">0</td>
                                            </t>
                                        </t>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
            </t>
            </t>
    </template>
            <template id="internal_layout">
        <t t-if="not o and doc">
            <t t-set="o" t-value="doc"/>
        </t>

        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id.sudo()"/>
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company"/>
        </t>
        <div class="header o_boxed_header">
        <div class="row mb8">
        <div class="col-xs-6 text-right mb4">
         <h4 class="mt0" t-field="company.report_header"/>
            </div>
            </div>
            </div>
            <div class="article o_report_layout_background">
            <t t-raw="0" />
            </div>
    </template>
    </data>
</odoo>