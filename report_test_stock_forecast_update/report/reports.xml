<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="paper_format_payment_receipt" model="report.paperformat">
            <field name="name">US Letter</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Landscape</field>
            <field name="margin_top">6</field>
            <field name="margin_bottom">0</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">45</field>
            <field name="dpi">80</field>
        </record>

        <report
            id="action_product_list_report_category"
            model="report.test.stock.forecast.customer"
            string="客戶明細(司機用)"
            report_type="qweb-pdf"
            paperformat="report_test_stock_forecast_update.paper_format_payment_receipt"
            name="report_test_stock_forecast_update.report_customer"
            file="report_test_stock_forecast_update.report_customer"
        />

    </data>
</odoo>
