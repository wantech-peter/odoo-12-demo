<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="customer_statement_parco2">
        <t t-call="web.html_container">
            <t t-call="wantech_customer_statement_parco2.internal_layout_customer_statement">
                    <div class="page" style="font-size:15px;">
                        <h2 align="center"><b>司機月結收款表</b></h2>
                        <div class="pull-right" style="margin-left:50%;">
                            <strong>日期: </strong>
                            <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y年%m月%d日')"/>
                        </div>
                    </div>
                    <t t-set="car_num" t-value="0"/>
                    <t t-foreach="docs" t-as="values">
                        <t t-set="total" t-value="0"/>
                        <table class="table" name="parco_table">
                                <tbody class="parco_tbody">
                                    <t t-if="values.car_number != car_num">
                                        <tr>
                                            <th style="font-size:20px">
                                                <strong>
                                                    車號:
                                                </strong>

                                                <td style="font-size:23px;" colspan="5"><strong><span t-field="values.car_number"/>
                                                </strong></td>

                                            </th>
                                        </tr>
                                        <t t-set="car_num" t-value="values.car_number"/>
                                    </t>
                                    <tr>
                                                <th>
                                                    <span t-esc="values.partner_number"/>
                                                </th>
                                                <th colspan="2">
                                                    <span t-esc="values.name"/>
                                                </th>
                                                <th colspan="7" style="text-align:right;">
                                                    <span t-esc="values.partner_id.street"/>
                                                    -
                                                    <span t-esc="values.partner_id.phone"/>
                                                </th>

                                    </tr>


                                    <tr>

                                                <th colspan="2" style="text-align:left;">
                                                    <strong>應收總額: </strong>
                                                    <span t-esc="values.outstanding" style="text-align:left;" t-options="{'widget':'monetary','display_currency':res_company.currency_id}"/>
                                                </th>
                                                <th colspan="7" style="text-align:right;">
                                                    <strong>截數日期:
                                                    </strong>
                                                    <span t-esc="values.cutoff_date" style="font-size:18px text-align:right;"/>
                                                </th>
                                    </tr>

                                    <!--<tr>-->

<!--
                                        <td colspan="8">
                                            <strong style="width:800px;">
                                                <span>會計部備註欄:____________________________________________________________</span>
                                            </strong>
                                        </td>
-->

                                    <!--</tr>-->

                                   <tr style="border:hidden;">

                                        <td colspan="3">
                                            <strong>
                                                <span>收款人備忘:____________________</span>
                                            </strong>
                                        </td>
                                        <td colspan="3">
                                            <strong >
                                                <span>收款人簽署及日期:______________________</span>
                                            </strong>
                                        </td>

                                    </tr>

                                </tbody>
                        </table>
                        <br/>
<!--                    <p style="page-break-after: always;"></p>-->
                </t>
            </t>
        </t>
    </template>
    <template id="internal_layout_customer_statement">
        <t t-if="not o and doc">
            <t t-set="o" t-value="doc"/>
        </t>

        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id.sudo()"/>
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company"/>
        </t>
        <div class="header o_boxed_header">
            <div class="row mb8">
                <div class="col-xs-6 text-right mb4">
                    <h4 class="mt0" t-field="company.report_header"/>
                </div>
            </div>
        </div>
        <div class="article">
            <t t-raw="0"/>
        </div>

        <div class="footer o_standard_footer">
            <div class="text-center" style="border-top: 1px solid black;">
                <div class="text-muted" style="margin-top: 15px;">
                    Page: <span class="page"/> / <span class="topage"/>
                </div>
            </div>
        </div>

    </template>
</odoo>
