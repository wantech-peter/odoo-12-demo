<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_list_output">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                    <div class="page" style="font-size:15px;">
                        <h2 align="center">總表</h2>
                        <t t-set="quot_date" t-value="0"/>
                        <t t-foreach="docs" t-as="product">
                            <table class="table table-condensed" name="product_list_table">
                                <tbody class="sale_tbody">
                                <t t-if="product['quotation_date'] != quot_date">
                                        <tr style="border:hidden;">
                                            <th style="font-size:20px;width: 300px;">
                                                <strong>
                                                    日期:
                                                </strong>
                                                <strong>
                                                    <span t-esc="product['quotation_date']"/>
                                                </strong>
                                            </th>
                                        </tr>
                                    <t t-set="quot_date" t-value="product['quotation_date']"/>
        <!--                        <div class="row mb32">-->
        <!--                            <div class="col-4">-->
        <!--                                <strong>日期:</strong>-->
        <!--                                <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d')"/>-->
        <!--                            </div>-->
        <!--                        </div>-->
    <!--                            <thead >-->
                                 <tr style=" background-color: #893b74; color:#000000  !important;">
                                       <th style="font-size: 20px;width:300px;">貨品編號</th>
                                        <th  style="font-size: 20px;width:400px;">貨品名稱</th>
                                        <th  style="font-size: 20px;width:200px;text-align:right;">數量</th>
                                    </tr>
<!--                                    </thead>-->
                                </t>

                                       <tr>
                                            <td  style="font-size: 20px;;width:300px;"><span t-esc="product['productcode']"/></td>
                                            <td  style="font-size: 20px;;width:400px;"><span t-esc="product['productname']"/></td>
                                            <td  style="font-size: 20px;;width:200px;text-align:right;"><span t-esc="int(product['product_qty'])"/> <span t-esc="product['unit']"/></td>
                                        </tr>
                                </tbody>
                            </table>
                        </t>

                    </div>
            </t>
            </t>
    </template>
</odoo>



