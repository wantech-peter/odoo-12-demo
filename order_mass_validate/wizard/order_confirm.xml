<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sale_order_confirm_view" model="ir.ui.view">
            <field name="name">batch.picking.delivery.orders</field>
            <field name="model">mass.picking.orders</field>
            <field name="arch" type="xml">
                <form string="Confirm Validation">
                    <p class="oe_grey">
                        Are you sure you want to perform the validation of all pickings.
                    </p>
                    <footer>
                        <button string="Confirm" name="validate_picking" type="object" default_focus="1" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <act_window id="action_confirm_payment"
            multi="True"
            key2="client_action_multi" name="Validate Pickings"
            res_model="mass.picking.orders" src_model="stock.picking"
            view_mode="form" target="new" view_type="form" />
    </data>
</odoo>
