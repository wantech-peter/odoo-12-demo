<odoo>
    <data>

        <record id="report_sales_by_salesperson_tree" model="ir.ui.view">
            <field name="name">report.sales.by.salesperson.tree</field>
            <field name="model">report.sales.by.salesperson</field>
            <field name="arch" type="xml">
                <tree string="營業員出貨表">
                    <field name="name"/>
                    <field name="productcode"/>
                    <field name="productname"/>
                    <field name="unit"/>
                    <field name="product_qty"/>
                    <field name="price_total"/>
                </tree>
            </field>
        </record>


        <record id="report_sales_by_salesperson_search" model="ir.ui.view">
            <field name="name">report.sales.by.salesperson.search</field>
            <field name="model">report.sales.by.salesperson</field>
            <field name='arch' type='xml'>
                <search string="營業員出貨表">
                    <field name="name"/>
                    <field name="productcode"/>
                    <field name="productname"/>
                    <field name="unit"/>
                    <field name="product_qty"/>
                    <field name="price_total"/>
                </search>
            </field>
        </record>


        <!--Action for Control Accounts-->
        <record id="action_report_sales_by_salesperson" model="ir.actions.act_window">
            <field name="name">營業員出貨表</field>
            <field name="res_model">report.sales.by.salesperson</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="search_view_id" ref="report_sales_by_salesperson_search"/>
            <field name="context"></field>
            <field name="view_id" ref="report_sales_by_salesperson_tree"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new Sale
                </p>
            </field>
        </record>
        <menuitem id="menu_report_sales_by_salesperson_tree" name="營業員出貨表" parent="sale.menu_sale_report" sequence="5"
                  action="action_report_sales_by_salesperson"/>
    </data>
</odoo>