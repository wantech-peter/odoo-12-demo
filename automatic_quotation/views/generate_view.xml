<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="sales_quotations_form_inherit">
            <field name="name">sale.quotation.form.inherit</field>
            <field name="model">sale.order.template</field>
            <field name="inherit_id" ref="sale_management.sale_order_template_view_form"/>
            <field name="arch" type="xml">
                 <xpath expr="//div[@class='oe_title']" position="after">
                    <group>
                        <group>
                            <field name="auto_generate"/>
                        </group>
                    </group>
                </xpath>
            </field>
        </record>

        <!--Internal Note and Customer Number in Sale Order-->
        <record id="payment_term_internal_note" model="ir.ui.view">
            <field name="name">sale.order.internal.note.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                 <xpath expr="//field[@name='payment_term_id']" position="after">
                     <field name="payment_internal_note" string="Internal Note" placeholder="Internal note..."/>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="before">
                     <field name="customer_number" string="Customer Number"/>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="after">
                    <label for="street1" string=" "/>
                    <div class="o_address_format">
                        <field name="street1" placeholder="Street..." class="o_address_street" readonly="1"/>
                        <field name="street2" placeholder="Street 2..." class="o_address_street" readonly="1"/>
                        <field name="city_name" placeholder="City" class="o_address_city" readonly="1"/>
                        <field name="state_id1" class="o_address_state" placeholder="State" readonly="1"/>
                        <field name="zip1" placeholder="ZIP" class="o_address_zip" readonly="1"/>
                        <field name="country_id1" placeholder="Country" class="o_address_country" readonly="1"/>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
