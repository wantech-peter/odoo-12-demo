<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="customer_fields_view">
            <field name="name">res.partner.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='print_receipt']" position="after">
                        <field name="statement_letter"/>
                        <field name="statement_type" widget="selection"/>
                        <field name="statement_receive" widget="selection"/>
                </xpath>
                <xpath expr="//field[@name='fax_number']" position="before">
                    <field name="whats_app_num" widget="phone"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>



