<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_list_invoice_subtotal">
        <t t-call="web.html_container">
  <t t-call="invoice_list_report_subtotal.internal_layout">
                <div class="page" style="font-size:15px;">
                    <h2 align="center">現金收款表</h2>
                    <div class="pull-right" style="margin-left:50%;">
                        <strong>日期:</strong>
                        <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y年%m月%d日')"/>
                    </div>
                </div>
                <t t-set="docs" t-value="docs.sorted(key=lambda i : i.date_invoice,  reverse=True)"/>

                <!--<t t-set="docs" t-value="docs.sorted(key=lambda i: i.invoice_partner)"/>-->

                <t t-set="docs" t-value="docs.sorted(key=lambda i : i.number_car)"/>
                <t t-set="docs" t-value="docs.sorted(key=lambda i : i.invoice_partner)"/>
         <!--<t t-foreach="o.move_ids_without_package.sorted(key=lambda m: m.product_id.id)" t-as="move">-->
                <table class="table table-condensed" name="invoice_list_table">
                    <tbody class="invoice_tbody">
                        <t t-set="total" t-value="0"/>
                        <t t-set="car_num" t-value="0"/>
                        <t t-set="cust_total" t-value="0"/>
                        <t t-set="docs_count" t-value="0"/>
                        <t t-set="current_invoice_partner" t-value="0"/>
                        <t t-foreach="docs" t-as="o">
                            <t t-if="o.number_car != car_num">
                                <tr>
                                    <th>
                                        <strong>
                                            <strong>車號:  </strong><span t-field="o.number_car"/>
                                        </strong>
                                    </th>
                                </tr>
                                <tr>
                                    <th>
                                        <span t-field="o.invoice_partner"/>
                                    </th>
                                    <th colspan="2">
                                        <span t-field="o.partner_id.display_name"/>
                                    </th>
                                    <th>
                                        <span t-field="o.partner_id.phone"/>
                                    </th>
                                    <th colspan="3">
                                        <!--<span t-field="o.partner_id.display_name"/>-->
                                    </th>
                                </tr>
                               <tr>
                                    <th></th>
                                    <th colspan="6">
                                        地址：<span t-field="o.partner_id.street"/>
                                    </th>
                                </tr>
                                <t t-set="car_num" t-value="o.number_car"/>
                            </t>
                            <t t-if="current_invoice_partner == 0">
                                 <t t-set="current_invoice_partner" t-value="o.invoice_partner"/>
                            </t>
                            <t t-if="o.invoice_partner != current_invoice_partner">
                                 <t t-if="o.number_car == car_num">
                                    <tr>
                                        <td colspan="3" style="text-align:right;">
                                            <strong>實收：<span style="border-bottom: 1px black solid; width:150px; display:inline-block;" /></strong>
                                        </td>
                                        <td colspan="3" style="text-align:right;">
                                            <strong>小計</strong>
                                        </td>
                                        <td style="text-align:left;">
                                            <strong>
                                                <span style="border-bottom: 1px black solid; width:120px; display:inline-block;">
                                                    <span t-esc="cust_total" style="text-align:right;" t-options="{'widget':'monetary','display_currency':res_company.currency_id}"/>
                                                </span>
                                            </strong>
                                        </td>
                                    </tr>
                                   <tr>
                                        <th>
                                            <span t-field="o.invoice_partner"/>
                                        </th>
                                        <th colspan="2">
                                            <span t-field="o.partner_id.display_name"/>
                                        </th>
                                        <th>
                                            <span t-field="o.partner_id.phone"/>
                                        </th>
                                        <th colspan="3">
                                            <!--<span t-field="o.partner_id.display_name"/>-->
                                        </th>
                                    </tr>
                                   <tr>
                                        <th></th>
                                        <th colspan="6">
                                            地址：<span t-field="o.partner_id.street"/>
                                        </th>
                                    </tr>
                                 <t t-set="current_invoice_partner" t-value="o.invoice_partner"/>
                                 <t t-set="cust_total" t-value="0"/>
                                 </t>
                            </t>
                                <t t-if="o.number_car == car_num">
                                    <t t-if="o.invoice_partner == current_invoice_partner">
                                        <tr>
                                            <td></td>
                                            <td colspan="2">
                                                <t t-if="o.date_invoice"><span t-field="o.date_invoice" t-options='{"format": "yyyy/MM/dd"}'/></t>
                                            </td>
                                            <td colspan="3">
                                                <span t-field="o.number"/>
                                            </td>
                                            <td>
                                                <span t-field="o.residual"/>
                                            </td>
                                            <t t-set="total" t-value="total + o.residual"/>
                                            <t t-set="cust_total" t-value="cust_total + o.residual"/>
                                        </tr>
                                    </t>
                                </t>
                                <t t-set="docs_count" t-value="docs_count+1"/>
                                <t t-if="len(docs) == docs_count">
                                    <tr>
                                        <td colspan="6" style="text-align:right;">
                                            <strong>小計</strong>
                                        </td>
                                        <td style="text-align:left;">
                                            <strong>
                                                <span t-esc="cust_total" t-options="{'widget':'monetary','display_currency':res_company.currency_id}"/>
                                            </strong>
                                        </td>
                                    </tr>
                                </t>
                        </t>
                    </tbody>
                </table>
                <div class="clearfix">
                    <div id="total" class="row">
                        <div t-attf-class="#{'col-4' if report_type != 'html' else 'col-sm-7 col-md-5'} ml-auto">
                            <table class="table table-sm">
                                <tr class="border-black o_subtotal">
                                    <td colspan="2">
                                    </td>
                                    <td class="text-left">
                                        <strong>總計</strong>
                                        <span t-esc="total" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: res_company.currency_id}"/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    <div>
                        <table class="table">
                            <tr>
                                <td>
                                    <strong>實收總額</strong><div style="display:inline-block;border-bottom:1px black solid;width:100%"></div>
                                </td>
                                <td>
                                    <strong>司機簽收</strong><div style="display:inline-block;border-bottom:1px black solid;width:100%"></div>
                                </td>
                                <td>
                                    <strong>核數人</strong><div style="display:inline-block;border-bottom:1px black solid;width:100%"></div>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </t>
        </t>
    </template>
    <template id="internal_layout">
        <t t-if="not o and doc">
            <t t-set="o" t-value="doc"/>
        </t>

        <t t-if="o and 'company_id' in o">
            <t t-set="company" t-value="o.company_id.sudo()"/>
        </t>
        <t t-if="not o or not 'company_id' in o">
            <t t-set="company" t-value="res_company"/>
        </t>
        <div class="header o_boxed_header">
            <div class="row mb8">
                <div class="col-xs-6 text-right mb4">
                    <h4 class="mt0" t-field="company.report_header"/>
                </div>
            </div>
        </div>
        <div class="article o_report_layout_background">
            <t t-raw="0"/>
        </div>
    </template>
</odoo>
