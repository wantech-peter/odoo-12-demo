<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sale_order_quotation_updation" model="ir.ui.view">
            <field name="name">sale.order.template.updation</field>
            <field name="model">sale.order.template</field>
            <field name="inherit_id" ref="sale_management.sale_order_template_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//div[@class='oe_title']" position="after">
                    <group>
                        <group>
                            <field name="customer_name"/>
                        </group>
                    </group>

                </xpath>
                <xpath expr="//field[@name='sale_order_template_line_ids']/tree/field[@name='price_unit']" position="replace">
                    <field name="price_unit"/>
                </xpath>
            </field>
        </record>
   </data>
</odoo>
