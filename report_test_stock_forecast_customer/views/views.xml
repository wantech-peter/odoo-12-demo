<odoo>
  <data>

        <record id="project_view_tree" model="ir.ui.view">
                <field name="name">report.test.stock.forecast.customer.tree</field>
                <field name="model">report.test.stock.forecast.customer</field>
                <field name="arch" type="xml">
                    <tree string="cashmove tree">
                        <field name="custname"/>
                        <field name="car_number"/>
                        <field name="productcode"/>
                        <field name="productname"/>
                        <field name="report_order"/>
                        <field name="product_qty"/>
                        <field name="unit"/>
                        <field name="quotation_date"/>
                        <field name="category"/>
                    </tree>
                </field>
        </record>


        <record id="project_view_search" model="ir.ui.view">
            <field name='name'>report.test.stock.forecast.customer.search</field>
            <field name='model'>report.test.stock.forecast.customer</field>
            <field name='arch' type='xml'>
                 <search string="Search customer by car">
                        <group col="8" colspan="4" expand="0" string="Group By">
                            <filter string="car_number" name="car_number" context="{'group_by':'car_number'}"/>
                        </group>
                        <field name="custname"/>
                        <field name="car_number"/>
                        <field name="productcode"/>
                        <field name="productname"/>
                        <field name="report_order"/>
                        <field name="product_qty"/>
                        <field name="unit"/>
                        <field name="quotation_date"/>
                        <field name="category"/>
                </search>
            </field>

        </record>



        <!--Action for Control Accounts-->
        <record id="project_action_control_accounts" model="ir.actions.act_window">
            <field name="name">Control Accounts</field>
            <field name="res_model">report.test.stock.forecast.customer</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="search_view_id" ref="report_test_stock_forecast_customer.project_view_search"/>
            <field name="context"></field>
            <field name="view_id" ref="report_test_stock_forecast_customer.project_view_tree"/>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Create a new Picking
              </p>
            </field>
        </record>
        <menuitem id="all_picking2" name="客戶明細(司機用)" parent="stock.menu_stock_warehouse_mgmt" sequence="6" action="project_action_control_accounts"/>
  </data>
</odoo>