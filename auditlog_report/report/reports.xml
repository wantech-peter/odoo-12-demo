<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="paper_format_audilog" model="report.paperformat">
            <field name="name">US Letter Auditlog</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="orientation">Portrait</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="margin_bottom">23</field>
            <field name="margin_top">20</field>
	        <field name="dpi">90</field>
        </record>
        <report
            id="action_auditlog_report"
            model="res.partner"
            string="Auditlog Report"
            report_type="qweb-pdf"
            paperformat="auditlog_report.paper_format_audilog"
            name="auditlog_report.log_report"
            file="auditlog_report.log_report"
        />

        <record id="ir_actions_contact_auditlog" model="ir.actions.server">
            <field name="name">Auditlog Report</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="state">code</field>
            <field name="code">action = model.get_auditlog_report()</field>
        </record>
        <menuitem id="menu_accounting_auditlog" name="Customer Log" parent="account.account_reports_management_menu"
                  sequence="23" groups="account.group_account_user" action="ir_actions_contact_auditlog"/>

    </data>
</odoo>

