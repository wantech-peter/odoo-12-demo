<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_list_product">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                    <div class="page" style="font-size:15px;">
                        <h2 align="center">總表</h2>
                    <div class="row mb32">
                        <div class="col-4">
                            <strong>日期:</strong>
                            <!--<span t-esc="docs[0]['dndate'][:10]"/>-->
                            <span t-esc="context_timestamp(docs[0]['dndate']).strftime('%Y-%m-%d')"/>
                        </div>
                    </div>
                        <table class="table table-condensed" name="product_list_table">
                            <tbody class="sale_tbody">
                                <thead style=" background-color: #893b74; color:#000000  !important;">
                                <tr>
                                   <th class="text-left" style="font-size: 20px;" >貨品編號</th>
                                    <th class="text-left" style="font-size: 20px;">貨品名稱</th>
                                    <th class="text-right"  style="font-size: 20px;">數量</th>
                                </tr>
                                </thead>
                                <t t-foreach="docs" t-as="product">
                                    <tr>
                                        <td class="text-left" style="font-size: 20px;"><span t-esc="product['productcode']"/><span t-esc="product['productcode']"/></td>
                                        <td class="text-left" style="font-size: 20px;"><span t-esc="product['productname']"/></td>
                                        <td class="text-right" style="font-size: 20px;"><span t-esc="int(product['total'])"/> <span t-esc="product['unit']"/></td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
            </t>
            </t>
    </template>
</odoo>




