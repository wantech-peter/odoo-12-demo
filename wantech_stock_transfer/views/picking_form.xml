<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="picking_form_button_inherit">
            <field name="name">stock.picking.form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_cancel']" position="after">
                    <button name="add_products" attrs="{'invisible': ['|', ('is_button_visible', '=', False),('state', 'in', ('waiting', 'done', 'confirmed', 'cancel'))]}"  string="Load Products" type="object" class="oe_highlight"/>
                    <button name="create_order" states="done" string="Create Order" type="object" class="oe_highlight"/>
                </xpath>
                <xpath expr="//field[@name='scheduled_date']" position="after">
                    <field name="is_button_visible" invisible="1"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>



