<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
    	
    <record id="sale_order_round_off" model="ir.ui.view">
            <field name="name">sale.order.round.off</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
            <xpath expr="//field[@name='amount_tax']" position="after">
                <field name="roundof_discount" attrs="{'invisible': [('payment_term_id', 'in', [3,12])]}" widget="monetary" options="{'currency_field': 'currency_id'}"/>
            </xpath>
        </field>
    </record>


    </data>
</odoo>

