<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sale_order_confirm_view" model="ir.ui.view">
            <field name="name">invoice.payment.confirm</field>
            <field name="model">confirm.payment</field>
            <field name="arch" type="xml">
                <form string="Confirm Payment">
                    <p class="oe_grey">
                        Are you sure you want to change the status from Paid to Confirm Paid?
                    </p>
                    <footer>
                        <button string="Confirm" name="confirm_paid" type="object" default_focus="1" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <act_window id="action_confirm_payment"
            multi="True"
            key2="client_action_multi" name="Confirm Paid"
            res_model="confirm.payment" src_model="account.invoice"
            view_mode="form" target="new" view_type="form" />
    </data>
</odoo>
