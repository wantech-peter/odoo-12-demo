<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--This code adds new filter 'Confirmed Paid' in Invoicing-->
        <record id="account_search_filter_inherit" model="ir.ui.view">
            <field name="name">account.search.inherit.filter</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.view_account_invoice_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='paid']" position="after">
                    <filter string="Paid Confirmed" name="confirmed_paid" domain="[('state', '=', 'confirmed_paid')]"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>