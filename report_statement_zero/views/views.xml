<odoo>
        <record id="project_view_tree" model="ir.ui.view">
                <field name="name">report.statement.zero.tree</field>
                <field name="model">report.statement.zero</field>
                <field name="arch" type="xml">
                    <tree string="cashmove tree">
                        <field name="bforward" widget="monetary"/>
                        <field name="partner_number"/>
                        <field name="name"/>
                        <field name="amount_total" widget="monetary"/>
                        <field name="outstanding" widget="monetary"/>
                        <field name="partner_id"/>
                        <field name="start_date"/>
                        <field name="cutoff_date"/>
                        <field name="bforward_date"/>
                        <field name="statement_letter"/>
                        <field name="statement_type"/>
                        <field name="statement_receive"/>
                        <field name="company_id"/>
                        <field name="car_number"/>
                        <field name="car_id"/>

                    </tree>
                </field>
        </record>


        <record id="project_view_search" model="ir.ui.view">
            <field name='name'>report.statement.zero.search</field>
            <field name='model'>report.statement.zero</field>
            <field name='arch' type='xml'>
                <search string="lunch cashmove">
                    <group expand="1" string="Group By">

                        <field name="bforward" widget="monetary" context="{'group_by':'bforward'}"/>
                        <field name="partner_number" context="{'group_by':'partner_number'}"/>
                        <field name="name" context="{'group_by':'name'}"/>
                        <field name="amount_total" context="{'group_by':'amount_total'}"/>
                        <field name="outstanding" context="{'group_by':'outstanding'}"/>
                        <field name="partner_id" context="{'group_by':'partner_id'}"/>
                        <field name="start_date" context="{'group_by':'start_date'}"/>
                        <field name="cutoff_date" context="{'group_by':'cutoff_date'}"/>
                        <field name="bforward_date" context="{'group_by':'bforward_date'}"/>
                        <field name="statement_letter" context="{'group_by':'statement_letter'}"/>
                        <field name="statement_type" context="{'group_by':'statement_type'}"/>
                        <field name="statement_receive" context="{'group_by':'statement_receive'}"/>
                        <field name="company_id" context="{'group_by':'company_id'}"/>
                        <field name="car_number" context="{'group_by':'car_number'}"/>
                        <field name="car_id" context="{'group_by':'car_id'}"/>


                        <!--<filter string="partner_id" name="partner_id" context="{'group_by':'partner_id'}"/>-->
                        <!--<filter string="name" name="name" context="{'group_by':'name'}"/>-->
                        <!--<filter string="account_balance" name="account_balance" context="{'group_by':'account_balance'}"/>-->
                        <!--<filter string="inv_balance" name="inv_balance" context="{'group_by':'inv_balance'}"/>-->
                        <!--<filter string="statement_balance" name="statement_balance" context="{'group_by':'statement_balance'}"/>-->
                        <!--<filter string="diffa" name="diffa" context="{'group_by':'diffa'}"/>-->
                        <!--<filter string="diffb" name="diffb" context="{'group_by':'diffb'}"/>-->
                        <!--<filter string="month" name="month" context="{'group_by':'month'}"/>-->
                        <!--<filter string="partner_number" name="partner_number" context="{'group_by':'partner_number'}"/>-->
                    </group>
                </search>
            </field>
        </record>

        <!--Action for Control Accounts-->
        <record id="project_action_control_accounts" model="ir.actions.act_window">
            <field name="name">Report Statement Zero</field>
            <field name="res_model">report.statement.zero</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="search_view_id" ref="project_view_search"/>
            <field name="context"></field>
            <field name="view_id" ref="project_view_tree"/>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Create Accounts Error Report
              </p>
            </field>
        </record>
      <menuitem id="report_statement_zero_menu" name="Report Statement Zero" parent="account.menu_finance_receivables"
                action="project_action_control_accounts" sequence="21"/>
</odoo>