<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <template id="followup_custom">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-set="partner"  t-value="doc.sudo().partner_id"/>
                <t t-call="followup_report_custom.external_layout">
                    <t t-set="followups"  t-value="request.env['account.followup.report'].sudo()._get_statement_report_lines({'partner_id': partner.id})"/>
                    <!--<t t-set="followups" t-value="followups.sorted(key=lambda i : i['columns'][0]['name'])"/>-->
                    <hr />
                    <div class="page">
                      <div class="row">
                        <div class="col-8 pull-left">
                            <strong><span style="font-size: 20px;" t-esc="partner.partner_number"/>&amp;nbsp;&amp;nbsp;&amp;nbsp;<span style="font-size: 20px;" t-esc="partner.name"/></strong><br/>
                            <span t-esc="partner.street"/><br/><span t-esc="partner.street2"/>
                        </div>
                        <div class="col-8 pull-right">
                            <div class="row">
                                <div style="margin-left:-15px;">
                                    <div>列印日期:</div>
                                    <div>載數日期:</div>
                                    <div>客戶電話:</div>
                                    <div>客戶傳真:</div>
                                </div>
                                <div style="margin-left:10px;">
                                    <div><span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y年%m月%d日')"/></div>
                                    <div><t t-esc="datetime.datetime.strptime(str(doc.cutoff_date),'%Y-%m-%d').strftime('%Y年%m月%d日')"/></div>
                                    <div><t t-esc="partner.phone"/></div>
                                    <div><t t-esc="partner.fax_number"/></div>
                                </div>
                            </div>
                        </div>
                        </div>
                        <div class="text-center"><span style="font-size: 20px;"><strong>月結單</strong></span></div>
                        <div style="border-top:10px;border:1px solid #000;"/>
                        <div class="col-12" style="margin-top:30px;padding-bottom:15px;">
                          <div class="row">
                              <div class="col-2" style="padding-left:0px;">
                                  <strong>前單結餘 : </strong>
                              </div>
                              <div class="col-8" style="border-bottom: 1px #000 solid;">
                              </div>
                              <div class="col-2" style="border-bottom: 1px #000 solid;padding-left:0px;">
                                 <span t-esc="int(float(doc.bforward))" t-options="{'widget': 'monetary', 'display_currency': partner.company_id.currency_id}"/>
                              </div>
                          </div>
                        </div>
                        <div style="margin-top:25px;">
                            <div class="row">
                                <div class="col-2">
                                    <div><strong>本月細則</strong></div>
                                </div>
                                <div class="col-3">
                                    <div><strong>發票日期</strong></div>
                                </div>
                                <div class="col-3">
                                    <div><strong>發票號碼</strong></div>
                                </div>
                                <div class="col-2">
                                    <div><strong>發票金額</strong></div>
                                </div>
                            </div>
                        </div>
                        <div style="border:1px solid #000;"/>
                        <div style="font-size: 13px;">
                            <div class="row">
                                <div class="col-2"></div>
                                <div class="col-3">
                                    <t t-foreach="followups" t-as="row">
                                        <t t-if="row['columns']">
                                            <t t-if="row['columns'][0]['name']">
                                                <t t-if="datetime.datetime.strptime(row['columns'][0]['name'],'%m/%d/%Y') &gt;= datetime.datetime.strptime(str(doc.start_date),'%Y-%m-%d') and datetime.datetime.strptime(row['columns'][0]['name'],'%m/%d/%Y') &lt;= datetime.datetime.strptime(str(doc.cutoff_date),'%Y-%m-%d')">
                                                  <div><t t-esc="row['columns'][0]['name']"/></div>
                                                </t>
                                            </t>
                                            <t t-else="">
                                                 <div><t t-esc="row['columns'][0]['name']"/></div>
                                            </t>
                                        </t>
                                    </t>
                                </div>
                                <div class="col-3">
                                    <t t-foreach="followups" t-as="row">
                                        <t t-if="row['columns']">
                                            <t t-if="row['columns'][0]['name']">
                                                <t t-if="datetime.datetime.strptime(row['columns'][0]['name'],'%m/%d/%Y') &gt;= datetime.datetime.strptime(str(doc.start_date),'%Y-%m-%d') and datetime.datetime.strptime(row['columns'][0]['name'],'%m/%d/%Y') &lt;= datetime.datetime.strptime(str(doc.cutoff_date),'%Y-%m-%d')">
                                                 <div><t t-esc="row['columns'][2]['name']"/></div>
                                                </t>
                                            </t>
                                            <t t-else="">
                                                 <div><t t-esc="row['columns'][2]['name']"/></div>
                                            </t>
                                        </t>
                                    </t>
                                </div>
                                <div class="col-2">
                                    <t t-set="subtotal" t-value="0"/>
                                    <t t-set="total" t-value="0"/>
                                    <t t-set="index" t-value="30"/>
                                    <t t-foreach="followups" t-as="row">
                                        <t t-if="row['columns']">
                                            <t t-if="row['columns'][0]['name']">
                                                <t t-if="datetime.datetime.strptime(row['columns'][0]['name'],'%m/%d/%Y') &gt;= datetime.datetime.strptime(str(doc.start_date),'%Y-%m-%d') and datetime.datetime.strptime(row['columns'][0]['name'],'%m/%d/%Y') &lt;= datetime.datetime.strptime(str(doc.cutoff_date),'%Y-%m-%d')">
                                                  <div><t t-esc="row['columns'][6]['name']"/></div>
                                                    <t t-set="sub_total" t-value="''.join(x for x in row['columns'][6]['name'] if x.isdigit())"/>
                                                    <t t-set="sub_total" t-value="sub_total[:-2]"/>
                                                    <t t-set="subtotal" t-value="subtotal+int(sub_total)"/>
                                                        <t t-set="index" t-value="index-1"/>
                                                </t>
                                            </t>
                                            <t t-else="">
                                                 <t t-if="row['columns'][0]['name'] or row['columns'][2]['name']">
                                                    <div><t t-esc="row['columns'][6]['name']"/></div>
                                                     <t t-set="sub_total" t-value="''.join(x for x in row['columns'][6]['name'] if x.isdigit())"/>
                                                     <t t-set="sub_total" t-value="sub_total[:-2]"/>
                                                     <t t-set="subtotal" t-value="subtotal+int(sub_total)"/>
                                                         <t t-set="index" t-value="index-1"/>
                                                 </t>
                                            </t>
                                        </t>
                                    </t>
                                </div>
                            </div>
                        </div>
                        <t t-foreach="range(index)" t-as="row">
                            <div style="height:22px"></div>
                             <!--<t t-if="row['columns'][0]['name']">-->
                                 <!---->
                             <!--</t>-->
                        </t>
                        <div class="col-4 pull-right">
                          <div class="row">
                            <div class="col-6 pull-right">
                                <div style="padding-left:35px;"><strong>金額: </strong></div>
                                <t t-set="total" t-value="subtotal+int(float(doc.bforward))"/>
                                <div style="padding-left:35px;"><strong>總金額: </strong></div>
                            </div>
                            <div class="row" ></div>
                            <div class="col-6 pull-right">
                                 <div><t t-esc="subtotal" t-options="{'widget': 'monetary', 'display_currency': partner.company_id.currency_id}"/></div>
                                <div><t t-esc="total" t-options="{'widget': 'monetary', 'display_currency': partner.company_id.currency_id}"/></div>
                            </div>
                          </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
    <template id="external_layout">
        <t t-if="not o" t-set="o" t-value="partner"/>
        <t t-set="company" t-value="o.company_id.sudo()"/>
        <div class="header">
            <div class="row">
                <div class="col-2 offset-2">
                    <img t-if="o.company_id.logo" t-att-src="image_data_uri(o.company_id.logo)" alt="Logo" style="width:120px;"/>
                </div>
                <div class="col-8" style="font-size:13px;">
                     <div>
                        <span t-field="o.company_id.name" style="font-size: 28px;font-weight: bold;"/>
                        <span class="pull-right" style="font-size: 21px;font-weight: bold;" t-esc="doc.car_number"/>
                     </div>
                     <div t-field="o.company_id.social_linkedin" style="font-size: 18px;font-weight: bold;"/>
                     <div>
                         <span t-esc="o.company_id.street" style="margin-right:30px;"/>
                         <span t-esc="o.company_id.street2"/>
                     </div>
                     <div>
                         <span>電話：</span><span t-esc="o.company_id.phone" style="margin-right:30px;"/>
                         <span>會計部：</span><span t-esc="o.company_id.vat" style="margin-right:30px;"/>
                         <span>傳真：</span><span t-esc="o.company_id.social_github"/><br/>
                     </div>
                     <div>
                         <span>電郵：</span><span t-esc="o.company_id.email" style="margin-right:48px;"/>
                         <span>電址：</span><span t-esc="o.company_id.website"/>
                     </div>
                </div>
            </div>
        </div>
        <div class="footer">
            <div style="border-top: 1px solid black;">
                <ul class="list-inline mb4">
                    <li t-if="company.statement_footer" class="list-inline-item"><span style="font-size: 14px;" t-field="company.statement_footer"/></li>
                </ul>
                <div name="financial_infos">
                    <span t-field="company.report_footer"/>
                </div>

                <div t-if="report_type == 'pdf'" class="text-center text-muted">
                    Page: <span class="page"/> / <span class="topage"/>
                </div>
            </div>
        </div>

        <div class="article o_report_layout_standard" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
            <t t-call="web.address_layout"/>
            <t t-raw="0"/>
        </div>
    </template>
</odoo>





