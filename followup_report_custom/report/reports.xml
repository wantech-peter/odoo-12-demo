<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="paper_format_followup_custom" model="report.paperformat">
            <field name="name">US Letter Followup</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="orientation">Portrait</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="margin_bottom">29</field>
	    <field name="header_spacing">37</field>
            <field name="margin_top">38</field>
	    <field name="dpi">90</field>
        </record>
        <report
            id="action_followup_report_custom"
            model="report.statement"
            string="Statement Report"
            report_type="qweb-pdf"
            paperformat="followup_report_custom.paper_format_followup_custom"
            name="followup_report_custom.followup_custom"
            file="followup_report_custom.followup_custom"
        />

    </data>
</odoo>
