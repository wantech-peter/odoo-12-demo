<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_partner_form_contact_updation" model="ir.ui.view">
            <field name="name">res.partner.contact.updation</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form" />
            <field name="arch" type="xml">
                <xpath expr="//div[@class='oe_title']" position="after">
                    <div class="oe_inline">
                        <group>
                            <group>
                                <field name="partner_number" string="Vendor Number" attrs="{'invisible': [('supplier', '!=', True)]}"/>
                                <field name="partner_number" string="Customer Number" attrs="{'invisible': [('customer', '!=', True)]}"/>
                            </group>
                        </group>
                    </div>
                </xpath>
                <xpath expr="//field[@name='user_ids']" position="before">
                    <field name="fax_number"/>
                </xpath>
                <xpath expr="//field[@name='vat']" position="after">
                    <field name="car_number"/>
                    <field name="customer_type"/>
                    <field name="customer_stopnum"/>
                </xpath>
            </field>
        </record>
        <record id="car_number_view" model="ir.ui.view">
            <field name="name">Car Number</field>
            <field name="model">car.number.option</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="number"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="customer_type_view" model="ir.ui.view">
            <field name="name">Customer Type</field>
            <field name="model">customer.type.option</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="type"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="stop_number_search_view" model="ir.ui.view">
            <field name="name">stop.number.search.view</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_tree"/>
            <field name="arch" type="xml">
                 <xpath expr="//field[@name='display_name']" position="before">
                     <field name="customer_stopnum"  widget="handle"/>
                     <field name="customer_stopnumber" />
                     <field name="car_number"/>

                 </xpath>
            </field>
        </record>
   </data>
</odoo>
