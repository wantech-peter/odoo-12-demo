<odoo>
  <data>
        <record id="project_view_tree" model="ir.ui.view">
                <field name="name">report.test.stock.forecast.tree</field>
                <field name="model">report.test.stock.forecast</field>
                <field name="arch" type="xml">
                    <tree string="cashmove tree" default_order="custname">
                        <!-- <field name="custno"/> -->
                        <field name="custname"/>
                        <field name="car_number"/>
                        <field name="customer_stopnum"/>
                        <field name="sono"/>
                        <field name="dnno"/>
                        <field name="dndate"/>
                        <field name="productcode"/>
                        <field name="productname"/>
                        <field name="product_qty"/>
                        <field name="unit"/>
                        <field name="sodate"/>
                    </tree>
                </field>
        </record>


        <record id="project_view_search" model="ir.ui.view">
            <field name='name'>report.test.stock.forecast.search</field>
            <field name='model'>report.test.stock.forecast</field>
            <field name='arch' type='xml'>
                <search string="lunch cashmove">
                        <field name="productcode"/>
                </search>
            </field>
        </record>



        <!--Action for Control Accounts-->
        <record id="project_action_control_accounts" model="ir.actions.act_window">
            <field name="name">執貨單 (客戶明細)</field>
            <field name="res_model">report.test.stock.forecast</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="search_view_id" ref="project_view_search"/>
            <field name="context"></field>
            <field name="view_id" ref="project_view_tree"/>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Create a new Picking
              </p>
            </field>
        </record>
        <menuitem id="all_picking2" name="執貨單 (客戶明細)" parent="stock.menu_stock_warehouse_mgmt" sequence="5" action="project_action_control_accounts"/>
  </data>
</odoo>