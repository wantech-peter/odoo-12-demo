<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="receipt_list_sales_order">

 <t t-if="not company">
            <!-- Multicompany -->
            <t t-if="company_id">
                <t t-set="company" t-value="company_id"/>
            </t>
            <t t-elif="doc and 'company_id' in doc">
                <t t-set="company" t-value="doc.company_id.sudo()"/>
            </t>
            <t t-else="else">
                <t t-set="company" t-value="res_company"/>
            </t>
        </t>

        <t t-call="sales_order_list_receipt.custom_header" t-lang="doc.partner_id.lang"/>

        <div class="article" t-att-data-oe-model="doc and doc._name" t-att-data-oe-id="doc and doc.id" t-att-data-oe-lang="doc and doc.env.context.get('lang')">
            <t t-set="display_discount" t-value="any([l.discount for l in doc.order_line])"/>
            <table class="table table-sm o_main_table">
                <thead>
                    <tr>
                        <t t-set="colspan" t-value="5"/>
                        <th style="width:300px" class="text-left">貨品</th>
                        <th class="text-left">數量</th>
                        <th class="text-right">單價</th>
                        <th t-if="display_discount" class="text-right" groups="sale.group_discount_per_so_line">
                            <span>Disc.(%)</span>
                            <t t-set="colspan" t-value="colspan+1"/>
                        </th>
                        <th class="text-right">
                            <t groups="account.group_show_line_subtotals_tax_excluded">Amount</t>
                            <t groups="account.group_show_line_subtotals_tax_included">金額</t>
                        </th>
                    </tr>
                </thead>
                <tbody class="sale_tbody">

                    <t t-set="current_subtotal" t-value="0"/>

                    <t t-foreach="doc.order_line" t-as="line">

                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>

                        <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                            <t t-if="not line.display_type">
                                <td style="width:300px">
                                    <span t-field="line.product_id.display_name"/>
                                </td>
                                <td class="text-left">
                                    <span t-field="line.product_uom_qty"/>
                                    <span t-field="line.product_uom" groups="uom.group_uom"/>
                                </td>
                                <td class="text-right">
                                    <span t-field="line.price_unit"/>
                                </td>
                                <td t-if="display_discount" class="text-right" groups="sale.group_discount_per_so_line">
                                    <span t-field="line.discount"/>
                                </td>
                                <td class="text-right o_price_total">
                                    <span t-field="line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                    <span t-field="line.price_total" groups="account.group_show_line_subtotals_tax_included"/>
                                </td>
                            </t>
                            <t t-if="line.display_type == 'line_section'">
                                <td t-att-colspan="colspan">
                                    <span t-field="line.name"/>
                                </td>
                                <t t-set="current_section" t-value="line"/>
                                <t t-set="current_subtotal" t-value="0"/>
                            </t>
                            <t t-if="line.display_type == 'line_note'">
                                <td t-att-colspan="colspan">
                                    <span t-field="line.name"/>
                                </td>
                            </t>
                        </tr>
                    </t>
                </tbody>
            </table>

            <div class="clearfix">
                <div id="total" class="row" name="total">
                    <div class="col-8">
                        <span t-field="doc.note"/>
                    </div>
                    <div class="col-4">
                        <table class="table table-sm">
                            <!--
                              <tr class="border-black o_subtotal" style="">
                                  <td><strong>Subtotal</strong></td>
                                  <td class="text-right">
                                      <span t-field="doc.amount_untaxed"/>
                                  </td>
                              </tr>
                              -->
                            <t t-foreach="doc.amount_by_group" t-as="amount_by_group">
                                <tr style="">
                                    <t t-if="amount_by_group[3] == 1 and doc.amount_untaxed == amount_by_group[2]">
                                        <td>
                                            <span t-esc="amount_by_group[0]"/>
                                            <span>&amp;nbsp;<span>on</span>&amp;nbsp;
                                                <t t-esc="amount_by_group[2]" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.pricelist_id.currency_id}"/>
                                            </span>
                                        </td>
                                        <td class="text-right o_price_total">
                                            <span t-esc="amount_by_group[1]" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.pricelist_id.currency_id}"/>
                                        </td>
                                    </t>
                                    <t t-else="">
                                        <td>
                                            <span t-esc="amount_by_group[0]"/>
                                        </td>
                                        <td class="text-right o_price_total">
                                            <span t-esc="amount_by_group[1]" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.pricelist_id.currency_id}"/>
                                        </td>
                                    </t>
                                </tr>
                            </t>
                            <tr class="border-black o_total">
                                <td>
                                    <strong>總計</strong>
                                </td>
                                <td class="text-right">
                                    <span t-field="doc.amount_total"/>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
            <div style="font-size:12px;">
                <div>上列貨品如數收妥</div>
                <div>此帳單如有錯漏請於當天內通知本公司，否則本公司視該賬無誤</div>
            </div>
        </div>
    </template>

    <template id="custom_header">
        <div class="header">
            <div class="o_boxed_header">
                <div class="row">
                    <div class="col-2 offset-2">
                        <img t-if="doc.company_id.logo" t-att-src="image_data_uri(doc.company_id.logo)" alt="Logo"
                             style="width:100px;"/>
                    </div>
                    <div class="col-8" style="font-size:10px;">
                        <div t-field="doc.company_id.name" style="font-size: 25px;font-weight: bold;"/>
                        <div>
                            <span t-esc="doc.company_id.street" style="margin-right:30px;"/>
                            <span t-esc="doc.company_id.street2"/>
                        </div>
                        <div>
                            <span>電話：</span>
                            <span t-esc="doc.company_id.phone" style="margin-right:30px;"/>
                            <span>會計部：</span>
                            <span t-esc="doc.company_id.vat" style="margin-right:30px;"/>
                            <span>傳真：</span>
                            <span t-esc="doc.company_id.social_github"/>
                            <br/>
                        </div>
                        <div>
                            <span>電郵：</span>
                            <span t-esc="doc.company_id.email" style="margin-right:30px;"/>
                            <span>電址：</span>
                            <span t-esc="doc.company_id.website"/>
                        </div>
                    </div>
                </div>
                <div class="row" style="margin-top:20px">
                    <div class="col-6">
                        <div style="font-size:14px;">客戶編號:
                            <span t-esc="doc.partner_id.partner_number"/>
                            <span t-esc="doc.payment_term_id.name"/>
                        </div>
                        <div style="font-size:22px;">
                            <span t-esc="doc.partner_id.name"/>
                            電話:
                            <span t-esc="doc.partner_id.phone"/>
                        </div>
                        <div style="font-size:12px;">
                            <span t-esc="doc.partner_id.street"/>
                        </div>
                        <div style="font-size:12px;">
                            <span t-esc="doc.partner_id.street2"/>
                        </div>
                    </div>
                    <div class="col-2">
                        <div style="font-size:22px;text-align:center;">發票</div>
                    </div>
                    <div class="col-4">
                        <div style="font-size:14px;">車號:
                            <span t-esc="doc.car_number.number"/>-
                            <span t-esc="doc.partner_id.customer_stopnum"/>
                        </div>
                        <div style="font-size:12px;" class="row">
                            <span style="width: 50px" class="col-4">發票編號:</span>
                            <span t-esc="doc.display_name" class="col-8" style=""/>
                        </div>
                        <div style="font-size:12px;" class="row">
                            <span style="width: 50px" class="col-4">發票日期:</span>
                            <span t-esc="doc.quotation_date.strftime('%Y年%m月%d日')" class="col-8"/>
                        </div>
                        <div style="font-size:12px;" class="row">
                            <span style="width: 50px" class="col-4">頁數:</span>
                            <span class="col-8">
                                <span class="page"/>
                                /
                                <span class="topage"/>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </template>

    <template id="report_saleorder">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <!--<t t-call="sales_order_list_receipt.custom_header" t-lang="doc.partner_id.lang"/>-->
                <t t-call="sales_order_list_receipt.receipt_list_sales_order" t-lang="doc.partner_id.lang"/>
            </t>
        </t>
    </template>


</odoo>




