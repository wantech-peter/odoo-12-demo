<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_company_report_form_inherit" model="ir.ui.view">
            <field name="name">res.company.report.form</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form" />
            <field name="arch" type="xml">
                <xpath expr="//div[@class='o_address_format']" position="after" >
                    <group>
                        <field name="signature_pic" widget="image"  class="oe_avatar"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>

