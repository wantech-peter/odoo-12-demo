<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
         <record id="batch_updt_wizard_view" model="ir.ui.view">
            <field name="name">Batch Update</field>
            <field name="model">batch.update.wizard</field>
            <field name="arch" type="xml">
                <form string="Batch Update">

                    <group col="4">

                        <field name="product_id"/>
                        <field name="price"/>
                    </group>
                    <footer>
                        <button name="batch_update" string="Update" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="btn btn-default" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="batch_update_action" model="ir.actions.act_window">
            <field name="name">Batch Update</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">batch.update.wizard</field>
            <field name="view_id" ref="batch_updt_wizard_view"/>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <act_window name="Batch Update"
            res_model="batch.update.wizard"
            src_model="sale.order.template"
            view_mode="form"
            view_id="batch_updt_wizard_view"
            target="new"
            key2="batch_update_action"
            id="action_wizard_open"
        />
    </data>
</odoo>



